html
    head
        title New Steam Order
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet" href="CSS/style.css")
    body
        .container
            .row
                .col 
                    a(href="/Customer") Home
                .col
                    a(href="/Logout") Logout
        h3 New Steam Order #{Identity}
        form(method="post" )
            .row
                .col
                    label Select Employee ID:
            .row
                .col
                    select(name='EmpID', id='item')
                        for emp in employees
                            if(emp.Emp_ID == Identity)
                                option(name="select" value=emp.Emp_ID selected) #{emp.Emp_ID}
                            else
                                option(name="select" value=emp.Emp_ID) #{emp.Emp_ID}
            .row
                .col-2
                    button(name="CusID" type="submit" class="btn btn-primary" value=Identity formaction="/CustomerSteamerOrderAction") Submit
                .col-2
                    button(type="button" class="btn btn-primary" onclick="history.back()") Back
            