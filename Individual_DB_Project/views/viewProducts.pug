html
    head
        title Products List
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet" href="CSS/style.css")
    body
        .container
            .row
                .col
                    a(href="/Reports") Reports
                .col
                    a(href="/adminPage") Home
                .col
                    a(href="/Logout") Logout
        h3 Product List Report:
        .row
            .col 
                table(style='width:90%', border='1')
                    tr
                        th Item ID
                        th Product Name
                        th Type
                        th Stock
                        th Price
                    for product in products
                        tr
                            td #{product.product_ID}
                            td #{product.P_name}
                            td #{product.type}
                            td #{product.stock}
                            td #{product.price}
        .row
            .col
                button(type="button" class="btn btn-primary" onclick="history.back()") Back
        