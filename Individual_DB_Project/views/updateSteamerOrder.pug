html
    head
        title Update Steam Order
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet" href="CSS/style.css")
    body
        .container
            .row
                .col
                    a(href="/Reports") Reports
                .col 
                    a(href="/AdminPage") Home
                .col
                    a(href="/Logout") Logout
        h3 Update Steam Order
        form(method="post" )
            .row
                .col-2
                    label Customer ID:
                .col-2
                    input(type="text" name="CusID" value=data[0].customer_ID) 
                .col
                    if(messages.CusID)
                        p #{messages.CusID}
            .row
                .col-2
                    label Employee ID:
                .col-2
                    input(type="text" name="EmpID" value=data[0].employee_ID) 
                .col
                    if(messages.EmpID)
                        p #{messages.EmpID}
            .row
                .col-2
                    button(name="ID" type="submit" class="btn btn-primary" formaction="/updateSteamerOrderAction" value=data[0].glove_steaming_ID) Submit
                .col-2
                    button(type="button" class="btn btn-primary" onclick="history.back()") Back